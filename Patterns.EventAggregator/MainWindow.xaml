<Window x:Class="Patterns.EventAggregator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patterns.EventAggregator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="New" Width="40">New</Button>
                <Button x:Name="Save" Width="40">Save</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="500"></StackPanel>
        <local:OrdersListView x:Name="OrderListView"/>
        <TabControl x:Name="OrderViews" Width="500"></TabControl>
    </Grid>
</Window>
